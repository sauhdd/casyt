import "//tools:cpp"

toolchain "default" {
    cpp.compile_flags = [
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-I{source_directory}/include",
    ]
}

toolchain "release" {
    cpp.compile_flags = [
        "-Werror",
    ]
}
